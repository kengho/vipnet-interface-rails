@import "_shared";

$settings-textfield-width: 600px;
$settings-radio-bgcolor: $form-inside-bgcolor;
<% Themizer.unthemize do %>
$settings-radio-text: $third-color~;
<% end %>
$settings-radio-checked-bgcolor: $settings-radio-text;
$settings-radio-checked-text: $form-inside-bgcolor;

<% Themizer.unthemize do %>

.settings {
  background-color: $dark-gray-bgcolor;
}

#general-settings, #users-settings {
  margin-top: 30px;
}

.settings__form {
  width: $settings-textfield-width;
  margin: 20px auto;
  padding: 20px;
  background-color: $form-inside-bgcolor;

  & a {
    text-decoration: none;
  }

  & h3 {
    color: $main-text-color~;
  }

  & > a {
    color: $main-link-color;
    cursor: pointer;
    &:hover {
      color: $main-link-color-hover;
    }
  }
}
<% end %>
<% Themizer.unthemize do %>
.settings__tab--selected {
  color: $main-link-color-hover !important;
  border-bottom: 1px solid $main-link-color-hover;
}

.settings__text {
  position: relative;

  & span {
    display: block;
    position: absolute;
    top: 0px;
    color: $primary-color~;
  }

  & input, label {
    width: $settings-textfield-width;
  }
}

.settings__radio {
  padding-bottom: 20px;

  & span {
    display: block;
    color: $primary-color~;
  }

  & label {
    display: inline-block;
    padding: 2px 6px;
    border-radius: 2px;
    cursor: pointer;
    font-size: 16px;
    background: $settings-radio-bgcolor;
    color: $settings-radio-text;
    height: 20px;
    vertical-align: top;
  }

  & > input {
    display: none;

    &[type="radio"]:checked + label {
      background: $settings-radio-checked-bgcolor;
      color: $settings-radio-checked-text;
    }
  }
}

.settings__boolean {
  padding-bottom: 20px;

  & span {
    display: block;
    color: $primary-color~;
  }
}

.settings__td {
  color: $main-text-color~;
  padding: 6px;
}

<% end %>
