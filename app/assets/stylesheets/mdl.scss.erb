@import "_shared";

$textfield-label-color: (
  "": rgba(0, 0, 0, 0.26),
  dark: rgba(255, 255, 255, 0.26),
);

$snackbar-light-bgcolor: #eee;
$snackbar-light-text-color: black;

.mdl-layout__header-row {
  padding: 0 16px 0 24px !important;
}

.mdl-navigation__link {
  padding: 4px !important;
}

.mdl-button {
  z-index: 400;
  transition: opacity $animation-time;
}

.mdl-snackbar__text {
  white-space: pre !important;
}

.mdl-snackbar {
  z-index: 1000;
  @extend %shadow;
}

.mdl-snackbar--light {
  background-color: $snackbar-light-bgcolor !important;

  & .mdl-snackbar__text {
    color: $snackbar-light-text-color !important;
  }
}

<% Themizer.themize do %>

.mdl-layout__header {
  background-color: $primary-color~ !important;
  box-shadow: none !important;

  & nav {
    margin-left: auto !important;
    margin-right: 0 !important;
  }
}

.mdl-button--icon {
  color: $contrast-text-color-inverted~ !important;
}

.mdl-button--primary {
  color: $primary-color~ !important;
}

.mdl-button--fab.mdl-button--primary,
.mdl-button--raised.mdl-button--primary {
  background-color: $primary-color~ !important;
  color: white !important;
}

.mdl-button--accent {
  color: $accent-color~ !important;
}

.mdl-button--gray {
  color: $gray-icon-color !important;
}

.mdl-badge:after {
  background-color: $third-color~ !important;
  color: $contrast-text-color-inverted~ !important;
}

.mdl-textfield__label::after {
  background-color: $primary-color~ !important;
}

.mdl-textfield__label {
  .mdl-textfield--floating-label.is-focused & {
    color: $primary-color~ !important;
  }
}

.mdl-checkbox.is-checked .mdl-checkbox__box-outline {
  border: 2px solid $primary-color~;
}

.mdl-checkbox.is-checked .mdl-checkbox__tick-outline {
  background: $primary-color~ url("data:image/svg+xml;base64,");
}

.mdl-snackbar__action {
  color: $accent-color~;
}

.mdl-progress {
  height: 3px !important;
  width: 100%;
  position: absolute;
  top: 0;
  z-index: 9999 !important;

  &> .bar1 {
    background-color: $accent-color~ !important;
  }

  &> .bar2, .bar3 {
    display: none;
  }
}

<% end %>
