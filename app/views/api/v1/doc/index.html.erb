<div class="doc">
  <p>0. <%= t(".overall_label") %></p>
  <%= t(".request") %>: <span class="data">GET</span><br>
  <%= t(".response") %>: <span class="data">JSON</span><br>
  <%= t(".format") %> <span class="data">VIPNET_ID: /^0x[0-9a-f]{8}$/ (like 0x1234abcd)</span><br>
  <%= t(".format") %> <span class="data">ACCESSIP: /^([0-9]{1,3}\.){3}[0-9]{1,3}$/ (lile IPv4)</span><br><br>
  <p>1. <%= t(".nodes_label") %></p>
  <%= t(".request") %>: <span class="get">api/v1/nodes?token=$GET_INFORMATION_TOKEN&vipnet_id=$VIPNET_ID</span><br>
  <%= t(".response") %>: <span class="json">{ "data": { "name": "NODE_NAME" }}</span><br>
  <br>
  <%= t(".request") %>: <span class="get">api/v1/nodes?$GET_INFORMATION_TOKEN&vipnet_id=$VIPNET_ID&only[]=name&only[]=creation_date</span><br>
  <span class="comment">// <%= t(".curl_only_comment") %></span>
  <%= t(".response") %>: <span class="json">{ "data": { "name": "NODE_NAME", "creation_date": "CREATION_DATE" }}</span><br>
  <br>
  <%= t(".fields") %>:
  <ol>
    <li><span class="json">name (string)</span></li>
    <li>
      <span class="json">enabled (boolean)</span>
      <span class="comment">// <%= t(".enabled_comment") %></span>
    </li>
    <li>
      <span class="json">category (string) ("client" | "server")</span>
    </li>
    <li><span class="json">creation_date (string) (ISO 8601, UTC, like "2016-08-20T12:34:56.000Z")</span></li>
    <li><span class="json">creation_date_accuracy (boolean)</span></li>
    <li><span class="json">ip (json) ({ "COORDINATOR_VID": "IP1", ... })</span></li>
    <li><span class="json">accessip (json) ({ "COORDINATOR_VID": "ACCESSIP1", ... })</span></li>
    <li>
      <span class="json">version (json) ({ "COORDINATOR_VID": "SOFTWARE_VERSION1", ... })</span>
      <span class="comment">// <%= t(".version_comment") %></span>
    </li>
    <li><span class="json">decoded_version (json) ({ "COORDINATOR_VID": "DECODED_SOFTWARE_VERSION1", ... })</span></li>
  </ol>
  <p>2. <%= t(".accessips_label") %></p>
  <%= t(".request") %>: <span class="get">api/v1/accessips?token=$GET_INFORMATION_TOKEN&accessip=$ACCESSIP</span><br>
  <%= t(".response") %>: <span class="json">{ "data": { "vid": "VID" }}</span><br><br>
  <p>3. <%= t(".availability_label") %></p>
  <%= t(".request") %>: <span class="get">api/v1/availability?token=$GET_INFORMATION_TOKEN&vid=$VID</span><br>
  <%= t(".response") %>: <span class="json">{ "data": { "availability": true | false }}</span><br><br>
  <p>4. <%= t(".errors_label") %></p>
  <%= t(".wrong_params") %><br>
  <span class="json">{ "errors": [{ "title": "external", "detail": "Expected ... as param", "links": { "related": { "href": "/api/v1/doc" }}}]}</span><br><br>
  <%= t(".node_not_found") %><br>
  <span class="json">{ "errors": [{ "title": "external", "detail": "Node not found" }]}</span><br><br>
  <%= t(".internal_error") %><br>
  <span class="json">{ "errors": [{ "title": "internal", "detail": "Please report to developer... Params: { ... }" }]}</span><br><br>
  <br>
</div>
