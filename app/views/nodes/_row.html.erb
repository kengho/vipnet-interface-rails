<%# params: node, row_classes (optional) %>
<tr id="node-<%= node.id %>__row" class="nodes__row<%= defined?(row_classes) ? " #{row_classes}" : "" %>">
  <% Node.view_order.each do |prop, appearance| %>
    <% if appearance %>
      <% if CurrentNode.column_names.include?(prop.to_s) %>
        <%= render "nodes/row/cell", node: node, prop: prop %>
      <% elsif lookup_context.template_exists?("nodes/row/_#{prop}") %>
        <%= render "nodes/row/#{prop}", node: node %>
      <% else %>
        <%= render "nodes/space" %>
      <% end %>
    <% end %>
  <% end %>
</tr>
