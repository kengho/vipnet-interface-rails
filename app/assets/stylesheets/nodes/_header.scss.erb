@import "_shared";

$variants-checked-bgcolor: (
  "": rgba(white, 0.8),
  dark: rgba(black, 0.8),
);

$variants-hover-bgcolor: (
  "": rgba(white, 0.4),
  dark: rgba(black, 0.4),
);

$search-bgcolor-focus: (
  "": lighten(map-get($primary-color, ""), 65%),
  dark: darken(map-get($primary-color, dark), 15%),
);

#header__actions,
#actions__export-selected,
.export-selected-variant,
#actions__unselect-all {
  transition-duration: 0.2s;
}

.flex-center {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  flex-grow: 2;
}

#header__actions {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  order: 1;

  &[disabled="disabled"] {
    opacity: 0;
    visibility: hidden;
  }
}

#actions__export-selected {
  order: 2;

  & textarea {
    position: absolute;
    top: -9999px;
  }

  &:hover + .export-selected-variant {
    opacity: 1;
    visibility: visible;
  }
}

.export-selected-variant {
  order: 1;
  display: inline-flex;
  flex-direction: column;
}

#actions__separator {
  order: 3;
}

#actions__unselect-all {
  order: 4;
}

#header__select-all {
  order: 5;
  margin-right: 8px;
}

#header__search-button {
  position: absolute;
  left: 8px;
  top: 8px;
}

#header__search {
  order: 6;
}

#header__clear-search-bar {
  visibility: hidden;
  position: absolute;
  right: 8px;
  top: 8px;
}

#header__toggle-dark-theme {
  order: 7;
  margin-left: 8px;
}

<% Themizer.themize do %>

#header__title div[name="home"] {
  order: 1;
  color: $contrast-text-color-inverted~;
  cursor: pointer;
}

#header__subtitle {
  color: $contrast-text-color-inverted~;
  font-size: 12px;
}

.export-selected-variant {
  opacity: 0;
  visibility: hidden;

  & label {
    color: $contrast-text-color-inverted~;
    border-radius: 2px;
    font-size: 9px;
    line-height: 8px;
    margin: 2px;
    padding: 2px;
    white-space: nowrap;
  }

  & > input {
    display: none;
  }

  & input[type="radio"]:checked + label {
    background-color: $variants-checked-bgcolor~;
    color: $main-text-color~;
  }

  & input[type="radio"]:not(:checked) + label:hover {
    background-color: $variants-hover-bgcolor~;
    color: $main-text-color~;
    cursor: pointer;
  }

  &:hover {
    opacity: 1;
    visibility: visible;
  }
}

#actions__separator {
  color: $contrast-text-color-inverted~;
}

#header__search {
  text-align: left;
  min-width: 200px;
  max-width: 500px;
  position: relative;

  & input {
    color: $main-text-color~ !important;
    background-color: $body-bgcolor~;
    width: 100%;
    border: none;
    padding: 4px;
    border-radius: 4px;
    height: 32px;
    padding: 0 46px;
    box-sizing: border-box;
    height: 48px;
    font-size: 16px;

    &:focus {
      background-color: $search-bgcolor-focus~;
    }
  }
}

<% end %>
