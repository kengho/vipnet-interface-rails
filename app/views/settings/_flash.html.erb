<% if flash[:notice] == "user created" %>
  <script>
    alert("Email: '<%= flash[:email] %>'\n<%= t('.password') %>: '<%= flash[:password] %>'");
  </script>
<% end %>
<% if flash[:notice] == "error creating user" %>
  <script>
    alert("<%= t('.error_saving_user') %>");
  </script>
<% end %>
<% if flash[:notice] == "user saved" %>
  <script>
    alert("<%= t('.user_saved') %>");
  </script>
<% end %>
<% if flash[:notice] == "user destroyed" %>
  <script>
    alert("<%= t('.user_destroyed') %>");
  </script>
<% end %>
<% if flash[:notice] == "error destroying user" %>
  <script>
    alert("<%= t('.error_destroying_user') %>");
  </script>
<% end %>
<% if flash[:notice] == "settings saved" %>
  <script>
    alert("<%= t('.settings_saved') %>");
  </script>
<% end %>
