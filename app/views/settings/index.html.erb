<%= content_tag(:body, class: "settings") do %>
  <%= content_tag(:div, class: "settings__form") do %>
    <%= content_tag(:h3) do %>
      <%= render "shared/back_button" %>
      <%= t(".label") %>
    <% end %>

    <%# ids of settings' divs below should be equal to "#{data-anchor}-settings" for js to work; %>
    <%= content_tag(:a, t(".general_label"), "data-anchor": "general") %>
    <%= content_tag(:a, t(".users_label"), "data-anchor": "users") %>

    <%# keep "-settings" (or any other) postfix in divs' ids %>
    <%# for disabling default anchor behaviour in browsers %>
    <%= content_tag(:div, render("general"), id: "general-settings") %>
    <%= content_tag(:div, render("users"), id: "users-settings", class: "table") %>
  <% end %>

  <%= render "shared/snackbar", light: true %>
<% end %>
