<%= content_tag(:div, class: "field") do %>
  <%= content_tag(:div, class: ["mdl-textfield", "mdl-js-textfield", "mdl-textfield--floating-label", "auth__textfield"]) do %>
    <%= tag(:input,
          {
            class: "mdl-textfield__input",
            type: "text",
          }.merge(props)
        )
    %>
    <% label = props[:label] ? props[:label] : t(".#{props[:id]}_label") %>
    <%= content_tag(:label, label,
          class: ["mdl-textfield__label", "auth__label"],
          for: props[:id],
        )
    %>
  <% end %>
<% end %>
