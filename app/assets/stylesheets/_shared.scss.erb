$body-bgcolor: (
  "": #f0f0f0,
  dark: invert(#f0f0f0),
);

$primary-color: (
  "": #098,
  dark: #069,
);

$accent-color: (
  "": #40a,
  dark: lighten(#40a, 30%),
);

$third-color: (
  "": #45b,
  dark: lighten(#45b, 40%),
);

$contrast-text-color: (
  "": black,
  dark: white,
);

$main-text-color: (
  "": #333,
  dark: invert(#333),
);

$contrast-text-color-inverted: (
  "": white,
  dark: black,
);

$snackbar-light-bgcolor: (
  "": #eee,
  dark: invert(#eee),
);

$gray: #777;
$main-link-color: #478;
$main-link-color-hover: lighten($main-link-color, 10%);
$dark-gray-bgcolor: #272727;
$form-inside-bgcolor: #eee;
$animation-time: 200ms;

%shadow {
  box-shadow:
    0 4px 4px 0    rgba(0, 0, 0, 0.15),
    0 3px 1px -2px rgba(0, 0, 0, 0.2),
    0 1px 5px 0    rgba(0, 0, 0, 0.15)
    !important;
}

%for-tooltips {
  position: absolute;
  visibility: hidden;
  z-index: 1000 !important;
  transition-timing-function: cubic-bezier(0, 0, 0.2, 1);
  transition-property: transform;
  transition-duration: 0.1s;
  // mdl-tooltip
  transform: scale(0);
  transform-origin: center top 0px;
  background: rgba(97, 97, 97, 0.9);
  border-radius: 2px;
  color: white;
  // display: inline-block;
  font-size: 10px;
  font-weight: 500;
  line-height: 14px;
  padding: 8px;
  text-align: center;
  white-space: normal;
}

.tooltip-wrapper {
  display: inline-block;
  position: relative;
}

.tooltip {
  @extend %for-tooltips;

  &:hover {
    transform: scale(1);
    visibility: visible;
  }
}

.tooltip-hover:hover + .tooltip {
  visibility: visible;
  transform: scale(1);
}

button[name="commit"] {
  margin-top: 24px;
}

.back-button {
  text-decoration: none;
  font-size: 24px;
  display: inline-block;
}

.table {
  display: table;
}

.tr {
  display: table-row;
}

.td {
  display: table-cell;
}

.gray {
  color: $gray !important;
}

<% Themizer.themize do %>

.primary {
  color: $primary-color~ !important;
}

.accent {
  color: $accent-color~ !important;
}

<% end %>
