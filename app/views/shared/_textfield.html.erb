<%= content_tag(:div, class: "field") do %>
  <%= content_tag(:div, class: %w(mdl-textfield mdl-js-textfield mdl-textfield--floating-label auth__textfield)) do %>
    <%= tag(:input,
          {
            class: "mdl-textfield__input",
            type: "text",
          }.merge(props)
        )
    %>
    <%
      user_textfield_label = case props[:name]
      when "user_session[current_password]"
                     t(".current_password")
      when "user_session[password]"
                     t(".password")
      when "user_session[password_confirmation]"
                     t(".password_confirmation")
      when "user_session[email]"
                     t(".email")
      end
    %>
    <% label = props[:label] ? props[:label] : user_textfield_label %>
    <%= content_tag(:label, label,
          class: %w(mdl-textfield__label auth__label),
          for: props[:id],
        )
    %>
  <% end %>
<% end %>
