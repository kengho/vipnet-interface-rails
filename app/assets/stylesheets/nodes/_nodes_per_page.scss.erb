@import "_shared";

$nodes-per-page-color: (
  "": #888,
  dark: #666,
);

$nodes-per-page-color-checked: (
  "": white,
  dark: black,
);

<% Themizer.themize do %>

.nodes-per-page {
  margin-top: 12px;
  text-align: center;
  font-size: 10px;
  // for info_block
  padding-bottom: 400px;

  & label {
    display: inline-block;
    padding: 0 6px;
    cursor: pointer;
    color: $nodes-per-page-color~;
    height: 20px;
  }

  & > input {
    display: none;
  }

  & input[type="radio"]:checked + label {
    background: $nodes-per-page-color~;
    color: $nodes-per-page-color-checked~;
    cursor: "";
  }

  & i {
    vertical-align: bottom;
    font-size: 20px;
    color: $nodes-per-page-color~;
  }
}

<% end %>

.tooltip--nodes-per-page {
  top: 30px;
  width: 90px;
  left: -40px;
}
