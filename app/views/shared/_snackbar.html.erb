<%= content_tag(:div, id: "snackbar", class: classes) do %>
  <%= content_tag(:div, "", class: "mdl-snackbar__text") %>
  <%= content_tag(:button, "", class: "mdl-snackbar__action", type: "button") %>
<% end %>
